@model SmartCampingWeb.Models.Alojamento

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Alojamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoAlojamentoId)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Tipo
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Capacidade)
        </dt>
        <dd class = "col-sm-10">
            @if(Model.Capacidade == 1)
            {
                <p>@Html.DisplayFor(model => model.Capacidade) Pessoa</p>
            }
            else
            {
                <p>@Html.DisplayFor(model => model.Capacidade) Pessoas</p>
            }
                
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Voltar atrás</a>
</div>
