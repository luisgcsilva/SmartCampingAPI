@{
    ViewData["Title"] = "Register";
}

<h1>Registo</h1>

<a class="sr-only" href="#main">
    Skip to content
</a>
<div id="main">
    <form class="form-signin" method="post" asp-area="" asp-controller="Login" asp-action="CheckRegister">
        <h1 class="h3 mb-3 font-weight-normal">Registo</h1>
        @if (ViewBag.EmailError != null && ViewBag.EmailError)
        {
            <div class="alert alert-danger">Já existe uma conta com o email dado.</div>
        }
        @if (ViewBag.PasswordError != null && ViewBag.PasswordError)
        {
            <div class="alert alert-danger">As duas palavras-passe não correspondem.</div>
        }

        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email" required>

        <label for="inputPassword" class="sr-only">Palavra-passe</label>
        <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Palavra-passe" required>

        <label for="inputConfirmPassword" class="sr-only">Confirmar Palavra-passe</label>
        <input type="password" id="inputConfirmPassword" name="confirmPassword" class="form-control" placeholder="Confirmar Palavra-passe" required>

        <input class="btn btn-primary" value="Register" type="submit"/>
    </form>
</div>
